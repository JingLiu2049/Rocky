
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category";
}


<div class="container">
    <div class="row pt-4"></div>
    <div class="col-6">
        <h2 class="text-primary">Category List</h2>
    </div>

    <div class="col-6">
        <a asp-action="Create">Create New Category</a>
    </div>
</div>

<br />
<br />
@if (Model.Count()> 0){ 
    <table class="table table-bordered table-striped" >
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category c in Model){
            <tr>
                <td>@c.Name</td>
                <td>@c.DisplayOrder</td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-Id="@c.Id" class="btn btn-outline-primary"> Edit </a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-Id="@c.Id" class="btn btn-outline-danger"> <i class="far fa-trash-alt"></i></a>
                </td>

            </tr>
            }
        </tbody>

    </table>
    
}
            else
            {
                <p>No Categories</p>
            }
